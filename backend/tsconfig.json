{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node", 
    "allowJs": true 
  },
  "include": [
    "src/**/*",
    "src/index.ts",
    "api/**/*",
    "app.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}