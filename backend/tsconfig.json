{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,   // Adicionando
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",   // Adicionando
    "allowJs": true               // Adicionando (opcional)
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
